<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/creative_background_with_rough_painted_texture">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_game"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:background="@color/material_dynamic_primary30"
        android:minHeight="?attr/actionBarSize"
        android:onClick="goMain"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@android:drawable/ic_menu_revert"
        app:title="Tic Tac Toe"
        app:titleTextColor="@color/white" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:stretchColumns="0,1,2,3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_game">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:fontFamily="@font/permanent_marker"
                android:text="Score"
                android:textAlignment="textEnd"
                android:textColor="@color/material_dynamic_primary90"
                android:textColorHighlight="@color/material_dynamic_primary90"
                android:textSize="24dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_Player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/permanent_marker"
                android:text="Player 1"
                android:textAlignment="center"
                android:textColor="@color/material_dynamic_primary90"
                android:textColorHighlight="@color/material_dynamic_primary90"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tv_Token1"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/permanent_marker"
                android:text="X"
                android:textAlignment="textStart"
                android:textColor="@color/material_dynamic_primary90"
                android:textColorHighlight="@color/material_dynamic_primary90"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tv_Score0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/permanent_marker"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/material_dynamic_primary90"
                android:textSize="24dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_Player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/permanent_marker"
                android:text="Player 2"
                android:textAlignment="center"
                android:textColor="@color/material_dynamic_primary90"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tv_Token2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/permanent_marker"
                android:text="0"
                android:textAlignment="textStart"
                android:textColor="@color/material_dynamic_primary90"
                android:textColorHighlight="@color/material_dynamic_primary90"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tv_Score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/permanent_marker"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/material_dynamic_primary90"
                android:textColorHighlight="@color/material_dynamic_primary90"
                android:textSize="24dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_Msg"
                android:layout_width="match_parent"
                android:layout_span="3"
                android:fontFamily="@font/permanent_marker"
                android:paddingTop="20sp"
                android:paddingBottom="20sp"
                android:text="Message"
                android:textAlignment="center"
                android:textColor="@color/material_dynamic_primary90"
                android:textSize="34sp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="385sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

            <Button
                android:id="@+id/bt_00"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1sp"
                android:layout_marginBottom="1sp"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:fontFamily="@font/permanent_marker"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="ClickButton"
                android:textSize="40sp"
                app:cornerRadius="3sp" />

            <Button
                android:id="@+id/bt_01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1sp"
                android:layout_marginBottom="1sp"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:fontFamily="@font/permanent_marker"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="ClickButton"
                android:textSize="40sp"
                app:cornerRadius="3sp" />

            <Button
                android:id="@+id/bt_02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="-1sp"
                android:layout_marginBottom="1sp"
                android:background="@android:color/transparent"
                android:backgroundTint="#0F0F50"
                android:clickable="false"
                android:fontFamily="@font/permanent_marker"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="ClickButton"
                android:textSize="40sp"
                app:cornerRadius="3sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

            <Button
                android:id="@+id/bt_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1sp"
                android:layout_marginBottom="1sp"
                android:background="@android:color/transparent"
                android:backgroundTint="#0F0F50"
                android:clickable="false"
                android:fontFamily="@font/permanent_marker"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="ClickButton"
                android:textSize="40dp"
                app:cornerRadius="0sp" />

            <Button
                android:id="@+id/bt_11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1sp"
                android:layout_marginBottom="1sp"
                android:background="@android:color/transparent"
                android:backgroundTint="#0F0F50"
                android:clickable="false"
                android:fontFamily="@font/permanent_marker"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="ClickButton"
                android:textSize="40dp"
                app:cornerRadius="0sp" />

            <Button
                android:id="@+id/bt_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="-1sp"
                android:layout_marginBottom="1sp"
                android:background="@android:color/transparent"
                android:backgroundTint="#0F0F50"
                android:clickable="false"
                android:fontFamily="@font/permanent_marker"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="ClickButton"
                android:textSize="40dp"
                app:cornerRadius="0sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

            <Button
                android:id="@+id/bt_20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1sp"
                android:background="@android:color/transparent"
                android:backgroundTint="#0F0F50"
                android:clickable="false"
                android:fontFamily="@font/permanent_marker"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="ClickButton"
                android:textSize="40dp"
                app:cornerRadius="0sp" />

            <Button
                android:id="@+id/bt_21"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1sp"
                android:background="@android:color/transparent"
                android:backgroundTint="#0F0F50"
                android:clickable="false"
                android:fontFamily="@font/permanent_marker"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="ClickButton"
                android:textSize="40dp"
                app:cornerRadius="0sp" />

            <Button
                android:id="@+id/bt_22"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="-1sp"
                android:background="@android:color/transparent"
                android:backgroundTint="#0F0F50"
                android:clickable="false"
                android:fontFamily="@font/permanent_marker"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="ClickButton"
                android:textSize="40dp"
                app:cornerRadius="0sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="131dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/table_board">

        <Button
            android:id="@+id/bt_Continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/permanent_marker"
            android:onClick="Continue"
            android:text="Continue"
            android:textSize="24dp"
            android:visibility="invisible" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>